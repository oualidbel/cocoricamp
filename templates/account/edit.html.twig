{% extends 'base.html.twig' %}

{% block title %}Modifier mes informations{% endblock %}

{% block body %}

<div class="main-account-container">

    {{form_start(formEditAccount, { 'attr' : {'class' : 'account-container' }}) }}

    <div class="account-intro">
        <h2 class="account-title">Modifier mes informations</h2>
        <button type="submit" class="account-edit-button" href="{{ path('app_account') }}">Modifier <i
                class="fa-solid fa-pen-to-square"></i></button>
    </div>
    <div class="account-child">
        <div class="label">Nom</div>
        <div class="value">
            {{ form_widget(formEditAccount.lastname, { 'label' : false }) }}
        </div>
    </div>
    <hr>
    <div class="account-child">
        <div class="label">Pr√©nom</div>
        <div class="value">
            {{ form_widget(formEditAccount.firstname, { 'label' : false }) }}
        </div>
    </div>
    <hr>
    <div class="account-child">
        <div class="label">Email</div>
        <div class="value">
            {{ form_widget(formEditAccount.email, { 'label' : false }) }}
        </div>
    </div>

    {{form_end(formEditAccount)}}

</div>

{% endblock %}