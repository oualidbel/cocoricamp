{% extends 'base.html.twig' %}

{% block title %}Nos hébergements{% endblock %}

{% block body %}

	<div class="lodging-show-id-page-content">

        <div class="lodging-show-id">

            <div class="lodging-show-id-img-container">
                <img src=" {{ asset('images/') }}{{ lodging.picture }}" alt="tipis"/>
            </div>
            
            <div class="content-lodging-show-id">
                <h2>{{ lodging.title }}</h2>
                <p>{{ lodging.content }}</p>
                
                {{ form_start(ReservationForm) }}

                <div class="reservation-form">

                    <div class="form-field">
                        <label for="check-in-date"><i class="fa-regular fa-calendar"></i>Date d'arrivée</label>
                        {{ form_widget(ReservationForm.checkin) }}
                    </div>

                    <div class="form-field">
                        <label for="check-out-date"><i class="fa-regular fa-calendar"></i>Date de départ</label>
                        {{ form_widget(ReservationForm.checkout) }}
                    </div>

                    <div class="form-field">
                        <label for="nb-travelers"><i class="fa-regular fa-user"></i>Voyageurs</label>
                        <input type="text" name="nb-travelers" class="nb-travelers" id="nb-travelers" value="Qui ?" readonly>
                        <div class="travelers" id="travelers-window">
                            <div class="travelers-adults">
                                <div class="travelers-text">
                                    <p>Adultes</p>
                                    <p>13 ans et plus</p>
                                </div>
                                <div class="travelers-counter">
                                    <button class="minus" type="button" name="button" id="minus-adults" disabled
                                        onclick="substract(adultsInput, this)">-</button>
                                    {{ form_widget(ReservationForm.adults) }}
                                    <button class="plus" type="button" name="button" id="plus-adults"
                                        onclick="add(adultsInput, this)">+</button>
                                </div>
                            </div>
                            <div class="travelers-children">
                                <div class="travelers-text">
                                    <p>Enfants</p>
                                    <p>- de 13 ans</p>
                                </div>
                                <div class="travelers-counter">
                                    <button class="minus" type="button" name="button" id="minus-children" disabled
                                        onclick="substract(childrenInput, this)">-</button>
                                    {{ form_widget(ReservationForm.children) }}
                                    <button class="plus" type="button" name="button" id="plus-children"
                                        onclick="add(childrenInput, this)">+</button>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>

                <div class="content-lodging-show-id-last-line">
                    <div class="content-lodging-show-id-last-line-left">
                        <p id="host-capacity"><i class="fa-regular fa-user"></i> {{ lodging.hostcapacity }}</p>
                        <p><i class="fa-regular fa-compass"></i> {{ lodging.location }}</p>
                    </div>
                    <div class="content-lodging-show-id-last-line-right">
                        <h3 id="price">{{ lodging.price }}€<span>/nuit</span></h3>
                        <button class="btn-discover-lodging-show-id" type="submit">Réserver</button>
                    </div>
                </div>

                {{ form_end(ReservationForm) }}

            </div>

        </div>

	</div>

{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/lodgingshowid.js') }}"></script>
{% endblock %}